{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.aplaceforallmystuff/mcp-kit",
  "description": "MCP server for Kit.com (ConvertKit) - manage subscribers, tags, sequences, broadcasts",
  "repository": {
    "url": "https://github.com/aplaceforallmystuff/mcp-kit",
    "source": "github"
  },
  "version": "1.0.1",
  "packages": [
    {
      "registryType": "npm",
      "registryBaseUrl": "https://registry.npmjs.org",
      "identifier": "kit-mcp-server",
      "version": "1.0.1",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Your Kit.com API key (v4)",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "KIT_API_KEY"
        }
      ]
    }
  ]
}
